extends layouts/main-layout.pug

block styles
     link(rel="stylesheet", href="/css/product.css")

block content
    main 
        if prods.length > 0
            //- 
            h3 Have Product
            .grid 
                each product in prods 
                    article.card.product-item 
                        header.card__header 
                            h3.product__title #{product.title}
                        div.card__image
                            img(src="https://d3e6tmgg461bic.cloudfront.net/Pictures/480xany/6/8/8/1277688_book.jpg", alt="A Book")
                        div.card__content
                            h4.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things! 
                        .card__actions 
                            button.btn Add to Cart 
        else 
            h3 No Products
